<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/less_white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ep_cover_photo"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/cover_photo"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true" />

            <LinearLayout
                android:id="@+id/ep_headers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/ep_cover_photo"
                android:gravity="center"
                android:paddingTop="16dp">


                <TextView
                    android:id="@+id/ep_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/ep_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:textColor="#FF707070"/>

                <!--<TextView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginTop="8dp"-->
                    <!--android:text="what is this"-->
                    <!--android:textColor="#FF909090" />-->

            </LinearLayout>

            <ImageView
                android:id="@+id/ep_icon"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/honey"
                android:layout_centerHorizontal="true"
                android:layout_above="@id/ep_headers"
                android:layout_marginBottom="-16dp" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ep_headers"
                android:layout_above="@+id/ep_other_buttons">

                <LinearLayout
                    android:id="@+id/ep_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/ep_games"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:paddingRight="16dp"
                        android:paddingLeft="16dp"
                        android:textSize="18sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/ep_description"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:paddingTop="16dp"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:textSize="18sp"
                        android:textStyle="bold"/>

                </LinearLayout>

            </ScrollView>


        <RelativeLayout
                android:id="@id/ep_other_buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:paddingTop="16dp"
                android:paddingBottom="12dp"
                android:visibility="gone">

                <ImageButton
                    android:id="@+id/ep_button_middle"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:onClick="middleButton"
                    android:background="@null"
                    android:adjustViewBounds="true"
                    android:cropToPadding="false"
                    android:scaleType="fitXY"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:id="@+id/ep_button_middle_caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/ep_button_middle"
                    android:paddingTop="8dp" />

                <ImageButton
                    android:id="@+id/ep_button_left"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_toLeftOf="@id/ep_button_middle"
                    android:layout_toStartOf="@id/ep_button_middle"
                    android:layout_marginRight="44dp"
                    android:layout_marginEnd="44dp"
                    android:onClick="leftButton"
                    android:background="@null"
                    android:adjustViewBounds="true"
                    android:cropToPadding="false"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/ep_button_left_caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ep_button_left"
                    android:layout_alignLeft="@id/ep_button_left"
                    android:layout_alignStart="@id/ep_button_left"
                    android:layout_marginLeft="-2dp"
                    android:layout_marginStart="-2dp"
                    android:paddingTop="8dp"/>

                <ImageButton
                    android:id="@+id/ep_button_right"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_toRightOf="@id/ep_button_middle"
                    android:layout_toEndOf="@id/ep_button_middle"
                    android:layout_marginLeft="44dp"
                    android:layout_marginStart="44dp"
                    android:onClick="rightButton"
                    android:background="@null"
                    android:adjustViewBounds="true"
                    android:cropToPadding="false"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/ep_button_right_caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ep_button_right"
                    android:layout_alignLeft="@id/ep_button_right"
                    android:layout_alignStart="@id/ep_button_right"
                    android:layout_marginLeft="-8dp"
                    android:layout_marginStart="-8dp"
                    android:paddingTop="8dp"/>

            </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
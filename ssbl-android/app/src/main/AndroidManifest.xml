        <!-- 			android:value="AIzaSyDvDhEOHF_rRxwkMT1reYfGQiXPYU9-5jY" /> pub -->

        <activity
            android:name=".android.activities.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".android.activities.MainActivity"
            android:theme="@style/MyNavigationDrawerTheme">
        </activity>
        <activity
            android:name=".android.activities.ProfileActivity"
            android:theme="@style/LowerLevelTheme" />
        <activity
            android:name=".android.activities.EditProfileActivity"
            android:theme="@style/LowerLevelTheme" />
        <activity
            android:name=".android.activities.EventActivity"
            android:theme="@style/LowerLevelTheme" />
        <activity
            android:name=".android.activities.EditEventActivity"
            android:theme="@style/LowerLevelTheme" />
        <activity
            android:name=".android.activities.ConversationActivity"
            android:theme="@style/LowerLevelTheme" />
        <activity
            android:name=".android.activities.NewConversationActivity"
            android:theme="@style/LowerLevelTheme" />
        <activity
            android:name=".android.activities.SettingsActivity"
            android:theme="@style/LowerLevelTheme" />
    </application>

    <!-- Stuff for Google Maps -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

</manifest>
